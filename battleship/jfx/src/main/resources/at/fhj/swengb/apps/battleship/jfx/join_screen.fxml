            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>

        </GridPane>
    </center>


    <bottom>

        <HBox alignment="CENTER" prefHeight="27.0" styleClass="hbox">
            <HBox prefHeight="27.0" prefWidth="752.0" BorderPane.alignment="BOTTOM_LEFT">
                <Button id="button" fx:id="nextscreen" onAction="#back" prefHeight="35.0" prefWidth="170.0" styleClass="button" text="back" />
            </HBox>

            <HBox alignment="BOTTOM_RIGHT" prefHeight="27.0" prefWidth="752.0">
                <Button id="button" fx:id="nextscreen1" onAction="#next" prefHeight="35.0" prefWidth="170.0" styleClass="button" text="next" />


